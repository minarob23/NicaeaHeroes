{
  "version": 2,
  "buildCommand": "npm run build && mkdir -p api/server api/shared && cp -r server/* api/server/ && cp -r shared/* api/shared/",
  "outputDirectory": "dist/public",
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node@2.15.10",
      "config": {
        "runtime": "nodejs18.x"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
